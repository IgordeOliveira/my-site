---
const { repos } = Astro.props;
---

<div
  class="w-full max-w-fit p-4"
>
  <div class="flex items-center justify-between mb-3">
    <h5
      class="font-semibold drop-shadow-md"
    >
      My Repositories
    </h5>
    <a
      href="https://github.com/IgordeOliveira?tab=repositories"
      target="_blank"
      class="btn btn-xs btn-outline"
    >
      View all
    </a>
  </div>
  <ul class="my-4 space-y-3">
    {
      repos.map((repo: any) => (
        <li>
          <a
            href={repo.url}
            target="_blank"
            class="flex items-center p-2 text-base font-bold text-gray-900 rounded-lg bg-sky-50/90 hover:bg-gray-100 group hover:shadow"
          >
            <div class="flex flex-col pl-2">
              <h1 class="col-2" class="font-semibold">
                {repo.name}
              </h1>
              <p class="font-normal text-sm">{repo.description}</p>
            </div>
          </a>
        </li>
      ))
    }
  </ul>
</div>
